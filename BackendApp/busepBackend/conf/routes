# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /										Application.index
#GET     /home									Application.index

#GET		/search									Search.show
GET		/test/{testVal}/{qq}					Utils.TEST

#GET		/login									Login.show
POST	/login/{uname}/{pwd}					Login.logIn
#GET		/logout									Login.show(mode:'logout')
GET		/logout/{uname}							Login.logOut

GET		/documents								Utils.latestDocuments(count:'0')
GET		/documents/{count}						Utils.latestDocuments
POST	/act/new								Acts.newAct

# za uzimanje podataka o korisnicima
GET		/users/highlord							Utils.usersByRole(0)
GET		/users/odbornici						Utils.usersByRole(1)
GET		/users/usersAll							Utils.usersByRole(-1)

GET		/get/panelIds/{uname}					Utils.getPanelIds
POST	/set/deoId/{uname}						Utils.setDeoId
POST	/set/clanId/{uname}						Utils.setClanId

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
#GET     /public/                                staticDir:public
GET     /		                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
